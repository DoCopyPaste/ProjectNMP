<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Menu Icon -->
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"  <!-- Replace with your menu drawable -->
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/title"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E-Sports"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/menu_icon"
        app:layout_constraintStart_toEndOf="@+id/menu_icon"
        app:layout_constraintEnd_toStartOf="@+id/profile_icon"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"  <!-- Replace with your profile drawable -->
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/menu_icon"
    app:layout_constraintBottom_toBottomOf="@+id/menu_icon"
    android:layout_marginEnd="16dp" />

    <!-- Section Icons and Text -->
    <!-- What We Play -->
    <!-- Replace with your game drawable --><![CDATA[
    app:layout_constraintTop_toBottomOf="@+id/menu_icon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_marginTop="48dp" />

    ]]><!-- Who We Are -->

    <!-- Replace with your people drawable --><![CDATA[
    app:layout_constraintTop_toBottomOf="@+id/what_we_play_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp" />

    ]]><!-- Our Schedule -->

    <!-- Replace with your schedule drawable --><![CDATA[
    app:layout_constraintTop_toBottomOf="@+id/who_we_are_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp" />

    ]]>

    <ImageView
        android:id="@+id/what_we_play_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_game"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/what_we_play_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="What We Play"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/what_we_play_icon" />

    <ImageView
        android:id="@+id/who_we_are_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_people"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/who_we_are_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Who We Are"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/who_we_are_icon" />

    <ImageView
        android:id="@+id/our_schedule_icon"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_schedule"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="485dp" />

    <TextView
        android:id="@+id/our_schedule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Our Schedule"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/our_schedule_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>